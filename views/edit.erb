<h1 style="background-color: #E0ECF8; width: 100%; height: 100%;">
<!-- Form to edit a Post -->
<div class="container">
  <div class="row_post">
      <form action="/post/<%=@post.id%>" method="POST">
      <input type="hidden" name="_method" value="PUT">
            <div class="form-group">
                <label class="blog_post">Edit Post </label><br>
                    <input type="text" name="title" placeholder="Edit Title" value="<%=@post.title%>">
                    <textarea id="markItUp" name="text_content" class="form-control" placeholder="Type here" rows="10" cols="20"><%= @post.text_content %></textarea>
                <input class="btn btn-primary" type="submit" value="Post">
            </div>
        </form>

        <form action="/posts/<%= @post.id %>/delete" method="post">
            <input id="hidden" type="hidden" name="_method" value="delete">
            <input class="btn btn-danger" type="submit" value="delete">
        </form>
 </div>
</div>  

</h1>